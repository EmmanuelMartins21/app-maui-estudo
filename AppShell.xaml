<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="app_maui_estudo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:app_maui_estudo.Views.Pages"
    Shell.NavBarIsVisible="False"
    Shell.TabBarUnselectedColor="LightSkyBlue"
    Shell.TabBarTitleColor="White"
    Shell.TabBarBackgroundColor="DarkBlue"
    Title="app_maui_estudo">

    <TabBar>
        <ShellContent
             Title="Home"
             ContentTemplate="{DataTemplate local:Login}"
             Route="Login"
             Icon="drone.png.png"/> 
        <ShellContent
             Title="Pricipal"
             ContentTemplate="{DataTemplate local:ProtegidaPrincipal}"
             Route="ProtegidaPrincipal" />
        <ShellContent
             Title="Sobre"
             ContentTemplate="{DataTemplate local:Sobre}"
             Route="Sobre" />
    </TabBar>
   

</Shell>
